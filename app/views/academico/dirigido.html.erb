<div id="academincos container">
	<%= render template: "academico/_header" %>
	<%= stylesheet_link_tag "academicoDirigidoPerfilDocenteEstudiante" %>
	<%= stylesheet_link_tag "academicoNew" %> 
	<%= javascript_include_tag "formGeneral" %>
	<%= javascript_include_tag "formDirigido" %>
	<div class="contenedor row content">
		<%= render "menuIzquierda"%>
		 <div class="container col-sm-9">
		  	<div class="tab-content">
		  		<div class="formContent form-horizontal form-group">
					<h1 class="tituloNew">Dirigido a</h1>
					<div style="margin: 0% 43%;">
						<button type="button" id="agregarDirigido" class="btn btn-success agregarDirigido" style="margin-left: 4.5%;">Agregar Perfil</button>
					</div>
					<form id="dirigido-form" action="#" method="POST" style="display: grid;    margin-left: 5%;">
						<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
						<input type="hidden" class="idContenidos" name="idContenido" value="<%= @contenidoid %>">
						<input type="hidden" id="cursos" name="cursos" value="<%= @curso %>">
						<% if @tipos == "crear"%>
							<div class="espacio1">
							</div>
						<% elsif @tipos == "editar"%>
							<div class="espacio1">
								<% @dirigit.each do |dirigido|%>
									<div class="form-group form-group-lg">
										<div class="personasDirigido col-sm-10">
											<input  class="form-control persona control-personalizado dirigido " type="hidden" name="idDirigido" value="<%= dirigido.id%>">
											<input  class="form-control persona control-personalizado requerido dirigido " type="text" name="dirigido"  placeholder="Participante" value="<%= dirigido.texto%>">
											<select id="tipo" class="form-control controlPersonalizado dirigido requerido"  name="tipo">
												<% if dirigido.tipo == 'Viñeta'%>
													<option value=""  disabled="disabled">Tipo</option>
													<option value="Viñeta" selected="true" >Viñeta</option>
													<option value="Párrafo" >Párrafo</option>
												<% elsif dirigido.tipo == 'Párrafo' %>
													<option value=""  disabled="disabled">Tipo</option>
													<option value="Viñeta" >Viñeta</option>
													<option value="Párrafo" selected="true" >Párrafo</option>
												<% else %>
													<option value="" selected="true" disabled="disabled">Tipo</option>
													<option value="Viñeta" >Viñeta</option>
													<option value="Párrafo" >Párrafo</option>
												<% end %>
												
											</select>
											<button type="button" class="btn btn-danger btn-xs eliminarDirigido" onClick="eliminarDirigido(this,<%= dirigido.id%>)"><i class="material-icons">delete_forever</i></button>
										</div>
									</div>
								<% end %>
								
							</div>
						<% end %>
						
						<div class="contenedor-botones col-sm-10">
							<div class="row">
							<div class="col-md-3">
								<button type="button" class="btn btn-lg btn-primary botones btn_atras" onClick="atras('<%= @atras %>')">Atras</button>
							</div>
							<div class="col-md-3">
								<% if @tipos == "crear"%>
									<button type="button" class="btn btn-lg btn-primary botones btn_guardarYsalir" onClick="botonCrear('true')">Guardar y Salir</button>
								<% elsif @tipos == "editar"%>
									<button type="button" class="btn btn-lg btn-primary botones btn_guardarYsalir" onClick="botonEditar('true')">Guardar y Salir</button>
								<% end %>
							</div>
							<div class="col-md-3">
								<% if @tipos == "crear"%>
									<button type="button" class="btn btn-lg btn-primary botones btn_guardar" onClick="botonCrear('truefalse')">Guardar</button>
								<% elsif @tipos == "editar"%>
									<button type="button" class="btn btn-lg btn-primary botones btn_guardar" onClick="botonEditar('truefalse')">Guardar</button>
								<% end %>
							</div>
							<div class="col-md-3">
								<% if @tipos == "crear"%>
									<% if @curso == "Programa" || @curso == "Diplomado"%>
										<button type="button" class="btn btn-lg btn-primary botones btn_siguiente" id="dirigido_boton" onClick="botonCrear('false')">siguiente</button>
									<% else %>
										<button type="button" class="btn btn-lg btn-primary botones btn_siguiente" id="dirigido_boton" onClick="botonCrear('false')">Enviar</button>
									<% end %>
								<% elsif @tipos == "editar"%>
									<% if @curso == "Programa" || @curso == "Diplomado"%>
										<button type="button" class="btn btn-lg btn-primary botones btn_siguiente" id="dirigido_boton" onClick="botonEditar('false')">siguiente</button>
									<% else %>
										<button type="button" class="btn btn-lg btn-primary botones btn_siguiente" id="dirigido_boton" onClick="botonEditar('false')">Enviar</button>
									<% end %>
								<% end %>
							</div>
						</div>
							
						</div>
						
					</form>
				</div>
		  	</div>
		</div>
				
	</div>
				
</div>